<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile2"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


        <TextView
            android:id="@+id/tx_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nick"
            app:layout_constraintStart_toEndOf="@+id/img_profile"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tx_receive"
            android:maxWidth="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:textColor="@color/black"
            android:text="sssssssssssssssssssssssssssssssssssss안녕안녕"
            android:layout_marginLeft="10dp"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp"
            android:breakStrategy="balanced"
            app:layout_constraintStart_toEndOf="@+id/img_profile"
            app:layout_constraintTop_toBottomOf="@id/tx_nick"
            />



    <TextView
        android:id="@+id/tx_receivetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오후 3:00"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toEndOf="@id/tx_receive"
        app:layout_constraintBottom_toBottomOf="@id/tx_receive"
        />


</androidx.constraintlayout.widget.ConstraintLayout>