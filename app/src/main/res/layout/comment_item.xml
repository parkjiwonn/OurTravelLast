<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="375dp"
    android:layout_height="110dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/commentimg"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_marginLeft="10dp"

                android:src="@drawable/profile2"
                />


            <TextView
                android:id="@+id/tx_Renick"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tx_retime"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="3시간 전"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            >


            <ToggleButton
                android:id="@+id/btn_like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_favorite_border_24"
                android:background="@drawable/favorite_toggle"
                android:layout_gravity="center"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn=""
                />


            <ImageButton
                android:id="@+id/btn_ReMenu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:src="@drawable/ic_baseline_menu_2422" />


        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/tx_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세요 반갑습니다."
        android:layout_marginLeft="70dp"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="좋아요"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tx_relikecnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tx_rereply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="답글 달기"
            android:textColor="#1708F1" />



    </LinearLayout>



</LinearLayout>