<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".diary.DiaryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0194F9">



                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"

                    />




            </androidx.appcompat.widget.Toolbar>





        </LinearLayout>




        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/DiaryRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:overScrollMode="never"

            >

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"
            >


            <ImageButton
                android:id="@+id/btn_home"
                android:layout_gravity="left"
                android:layout_width="80dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_baseline_home_24"
                android:background="#0194F9"

                >

            </ImageButton>





            <ImageButton
                android:id="@+id/btn_diary"
                android:layout_gravity="left"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_baseline_edit_note_24"
                android:background="#0194F9"
                >

            </ImageButton>

            <ImageButton
                android:id="@+id/btn_chat"
                android:layout_gravity="left"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_baseline_question_answer_24"
                android:background="#0194F9"
                >

            </ImageButton>

            <ImageButton
                android:id="@+id/btn_profile"
                android:layout_gravity="left"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_baseline_person_24"
                android:background="#0194F9"
                >

            </ImageButton>

            <ImageButton
                android:id="@+id/btn_map"
                android:layout_gravity="left"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_baseline_map_24"
                android:background="#0194F9"
                >

            </ImageButton>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:background="#0194F9"
                android:gravity="center"
                android:text="홈"
                android:textSize="15sp"
                android:textColor="#ffffff">

            </TextView>

            <TextView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:background="#0194F9"
                android:gravity="center"
                android:text="일기"
                android:textSize="15sp"
                android:textColor="#ffffff">

            </TextView>

            <TextView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:background="#0194F9"
                android:gravity="center"
                android:text="채팅"
                android:textSize="15sp"
                android:textColor="#ffffff">

            </TextView>

            <TextView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:background="#0194F9"
                android:gravity="center"
                android:text="프로필"
                android:textSize="15sp"
                android:textColor="#ffffff">

            </TextView>

            <TextView
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:background="#0194F9"
                android:gravity="center"
                android:text="지도"
                android:textSize="15sp"
                android:textColor="#ffffff">

            </TextView>

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:layout_gravity="bottom|right"
            app:maxImageSize="30dp"
            android:src="@drawable/ic_baseline_border_color_24"
            >

        </com.google.android.material.floatingactionbutton.FloatingActionButton>

    </FrameLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>