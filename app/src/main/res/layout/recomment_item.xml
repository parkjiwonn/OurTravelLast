<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="375dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/recomment_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/profile2"
                    />


                <TextView
                    android:id="@+id/recomment_nick"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:textSize="15sp" />



            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginLeft="70dp"
                >


                <ToggleButton
                    android:id="@+id/recomment_like"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    android:background="@drawable/favorite_toggle"
                    android:layout_gravity="center"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn=""
                    />


                <ImageButton
                    android:id="@+id/btn_ReReMenu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:src="@drawable/ic_baseline_menu_2422" />


            </LinearLayout>



        </LinearLayout>

        <TextView
            android:id="@+id/recomment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안녕하세요 반갑습니다."
            android:layout_marginLeft="70dp"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좋아요"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/recomment_likecnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                />


            <TextView
                android:id="@+id/recomment_date"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="3시간 전"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                />



        </LinearLayout>


    </LinearLayout>


</LinearLayout>