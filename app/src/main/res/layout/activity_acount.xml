<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".setting.AcountActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0194F9">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_west_24"
            android:background="#00000000"
            >

        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="계정 / 정보 관리"
            android:textColor="#ffffff">

        </TextView>

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profile2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/tx_nick"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="jiwon"
                />

            <TextView
                android:id="@+id/tx_email"
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="이메일"
                />


        </LinearLayout>

        <Button
            android:id="@+id/btn_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="설정"
            android:backgroundTint="#1E88E5"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>



    <View
        android:background="#575754"
        android:layout_width="350dp"
        android:layout_height="3px"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="monspirit__@naver.com"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#1E88E5"
            android:layout_marginLeft="50dp"
            android:text="인증완료"
            />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대폰 번호"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tx_phone"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/btn_certify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="인증하기"
            android:backgroundTint="#1E88E5"
        />

    </LinearLayout>

    <View
        android:background="#373434"
        android:layout_width="350dp"
        android:layout_height="3px"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            />


        <ImageButton
            android:id="@+id/btn_chpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:background="#00000000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            >

        </ImageButton>

    </LinearLayout>










</LinearLayout>