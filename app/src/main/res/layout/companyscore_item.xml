<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tx_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:text="동행글 제목"
        android:textColor="@color/black"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tx_start"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tx_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:text="2022-09-28      ~"
        android:textColor="@color/black"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tx_finish"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tx_start"
        app:layout_constraintTop_toBottomOf="@id/tx_title"
        android:layout_marginLeft="20dp"
        android:text="2022-09-28"
        android:textColor="@color/black"
        android:textSize="18sp"
        />

    <RatingBar
        android:id="@+id/mediumRatingBar"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tx_start"
        app:layout_constraintStart_toStartOf="parent"
        android:isIndicator="false"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:numStars="5"
        android:progressTint="@android:color/holo_orange_light"
        android:rating="0"
        android:stepSize="0.5" />

    <TextView
        android:id="@+id/tx_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/mediumRatingBar"
        app:layout_constraintTop_toBottomOf="@id/tx_finish"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="2.5"
        android:textColor="@color/black"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tx_jum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tx_score"
        app:layout_constraintTop_toBottomOf="@id/tx_finish"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="점"
        android:textColor="@color/black"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/btn_check"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:text="확인"
        app:layout_constraintStart_toEndOf="@id/tx_jum"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="30dp"
        android:backgroundTint="#0194F9"
        android:textSize="15sp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>