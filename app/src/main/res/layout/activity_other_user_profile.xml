<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile.OtherUserProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0194F9">


        <TextView
            android:id="@+id/tx_profiletitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"

            android:textColor="#ffffff">

        </TextView>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/profile2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tx_nick"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="닉네임"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        />



                    <ToggleButton
                        android:id="@+id/btn_friend"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_baseline_person_add_alt_24"
                        android:background="@drawable/friend_toggle"
                        android:checked="false"
                        android:text=""
                        android:textOff=""
                        android:textOn=""
                        />

                    <ImageButton
                        android:id="@+id/btn_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_more_vert_24"
                        android:layout_marginLeft="10dp"
                        android:background="#00000000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:text="이메일 인증"
                                android:textSize="17sp"
                                android:textColor="@color/black" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_baseline_done_24333"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/tx_phone"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:textSize="17sp"

                                android:text="휴대폰 인증"
                                android:textColor="@color/black" />


                            <ImageView
                                android:id="@+id/img_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_baseline_done_24333"

                                />


                        </LinearLayout>


                    </LinearLayout>




                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

        <View
            android:background="#575754"
            android:layout_width="350dp"
            android:layout_height="3px"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tx_produce"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="자기소개를 입력해주세요."
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            />

        <View
            android:background="#575754"
            android:layout_width="350dp"
            android:layout_height="3px"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:text="동행 점수"
                android:textSize="18sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:id="@+id/img_announce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_info_2422"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_star_rate_24"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"

                />

            <TextView
                android:id="@+id/tx_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"

                android:textColor="@color/black"
                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <RatingBar
                android:id="@+id/mediumRatingBar"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:numStars="5"
                android:progressTint="@android:color/holo_orange_light"
                android:rating="0"
                android:stepSize="0.5" />

            <Button
                android:id="@+id/btn_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#0194F9"
                android:layout_marginLeft="30dp"
                android:text="동행 점수 남기기"
                />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/tx_diary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="동행글"
                android:layout_marginLeft="90dp"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/tx_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="일기"
                android:layout_marginLeft="135dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/view_company"
                android:backgroundTint="#1E88E5"
                android:layout_width="150dp"
                android:layout_height="10px"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/view_diary"
                android:backgroundTint="#1E88E5"
                android:layout_width="150dp"
                android:layout_height="10px"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:orientation="horizontal"
        >


        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="80dp"
            android:layout_height="46dp"
            android:layout_gravity="left"
            android:background="#0194F9"
            android:src="@drawable/ic_baseline_home_24"

            >

        </ImageButton>

        <ImageButton
            android:id="@+id/btn_diary"
            android:layout_gravity="left"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_baseline_edit_note_24"
            android:background="#0194F9"
            >

        </ImageButton>

        <ImageButton
            android:id="@+id/btn_chat"
            android:layout_gravity="left"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_baseline_question_answer_24"
            android:background="#0194F9"
            >

        </ImageButton>

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_gravity="left"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_baseline_person_24"
            android:background="#0194F9"
            >

        </ImageButton>

        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_gravity="left"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_baseline_settings_24"
            android:background="#0194F9"
            >

        </ImageButton>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="#0194F9"
            android:gravity="center"
            android:text="홈"
            android:textSize="15sp"
            android:textColor="#ffffff">

        </TextView>

        <TextView
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="#0194F9"
            android:gravity="center"
            android:text="일기"
            android:textSize="15sp"
            android:textColor="#ffffff">

        </TextView>

        <TextView
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="#0194F9"
            android:gravity="center"
            android:text="채팅"
            android:textSize="15sp"
            android:textColor="#ffffff">

        </TextView>

        <TextView
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="#0194F9"
            android:gravity="center"
            android:text="프로필"
            android:textSize="15sp"
            android:textColor="#ffffff">

        </TextView>

        <TextView
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:background="#0194F9"
            android:gravity="center"
            android:text="설정"
            android:textSize="15sp"
            android:textColor="#ffffff">

        </TextView>

    </LinearLayout>



</LinearLayout>